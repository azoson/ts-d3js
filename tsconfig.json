{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "commonJS",
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  }
}
